{
  "name": "Agno-Dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "forwardPorts": [
    7777,
    7233
  ],
  "postCreateCommand": "uv venv && uv sync --all-extras && chmod -R 555 .venv/lib/python*/site-packages",
  "postStartCommand": "npm i -g @modelcontextprotocol/server-github && mkdir -p .continue/cache && chmod +x mcp/code_context/server.py && chmod +x scripts/run_code_mcp.sh && bash scripts/check_continue_env.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "files.autoSave": "afterDelay",
        "files.autoSaveDelay": 750,
        "terminal.integrated.shellIntegration.enabled": true,
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ]
    }
  }
}