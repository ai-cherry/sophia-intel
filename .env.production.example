# SOPHIA Intel Production Environment Variables
# Copy to .env.production and fill in actual values

# Lambda Labs API Key for inference
LAMBDA_API_KEY=secret_sophiacloudapi_YOUR_API_KEY_HERE

# GitHub Personal Access Token for repository operations
GITHUB_PAT=github_pat_YOUR_TOKEN_HERE

# DNSimple API credentials for domain management
DNSIMPLE_API_KEY=dnsimple_u_YOUR_API_KEY_HERE
DNSIMPLE_ACCOUNT_ID=162809

# OpenRouter API key for additional model access (optional)
OPENROUTER_API_KEY=sk-or-v1-YOUR_KEY_HERE

# Flask secret key for session management
FLASK_SECRET_KEY=sophia-intel-production-secret-2025

# ============================================================================
# RAILWAY + LAMBDA LABS DEPLOYMENT (Added for Production Migration)
# ============================================================================

# Railway API Token (for deployment and management)
RAILWAY_API_TOKEN=your_railway_token_here

# Lambda Labs GH200 Inference Servers
LAMBDA_PRIMARY_URL=http://192.222.51.223:8000
LAMBDA_SECONDARY_URL=http://192.222.50.242:8000

# ============================================================================
# DATABASE SERVICES (Railway)
# ============================================================================

# Redis Configuration (Railway redis-cache service)
REDIS_HOST=redis-cache
REDIS_PORT=6379
REDIS_URL=redis://redis-cache:6379

# PostgreSQL Configuration (Railway postgres service)
DATABASE_URL=postgresql://user:password@postgres:5432/sophia_intel
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Qdrant Vector Store Configuration (Railway vector-store service)
QDRANT_HOST=vector-store
QDRANT_PORT=6333
QDRANT_URL=http://vector-store:6333

# ============================================================================
# ORCHESTRATOR & API GATEWAY
# ============================================================================

# Orchestrator Configuration
ORCHESTRATOR_URL=https://api-gateway.railway.internal
ORCHESTRATOR_PORT=8000

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Prometheus Metrics
PROMETHEUS_PORT=8090
METRICS_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# DEPLOYMENT & INFRASTRUCTURE
# ============================================================================

# Environment
ENVIRONMENT=production
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# DNS Configuration
DOMAIN=sophia-intel.ai
API_DOMAIN=api.sophia-intel.ai
DASHBOARD_DOMAIN=www.sophia-intel.ai

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Lambda Labs Integration
LAMBDA_INFERENCE_ENABLED=true
LAMBDA_FALLBACK_ENABLED=true

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=300

