app = "sophia-intel"
primary_region = "ord"

[build]
  dockerfile = "Dockerfile"

[http_service]
  internal_port = 8080
  force_https = true
  auto_stop_machines = "stop"
  auto_start_machines = true
  min_machines_running = 2
  [http_service.concurrency]
    type = "requests"
    soft_limit = 200
    hard_limit = 250
  [[http_service.checks]]
    grace_period = "10s"
    interval = "15s"
    method = "GET"
    path = "/api/v1/health"
    protocol = "http"
    timeout = "5s"

[deploy]
  strategy = "rolling"
  max_unavailable = 1
  wait_timeout = "10m"

[env]
  LOG_LEVEL = "debug"
  PRIMARY_REGION = "ord"
  PORT = "8080"
  PYTHONPATH = "/app"
  ENVIRONMENT = "production"

[[vm]]
  size = "shared-cpu-2x"
  memory = "4gb"
  processes = ["app"]

