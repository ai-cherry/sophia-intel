# Tone
ROO_TONE=no_bs

# MCP
USE_MCP=1
MCP_SESSION_DIR=.sophia_sessions
MCP_CODE_CONTEXT=stdio
MCP_HTTP_URL=http://127.0.0.1:8765

# Qdrant (cloud)
QDRANT_URL=
QDRANT_API_KEY=
QDRANT_COLLECTION=repo_docs
RAG_TOPK=8

# LLM
# If using vLLM/OpenAI-compatible:
# OPENAI_BASE_URL=http://<host>:8000/v1
# LLM_MODEL=llama-3.2
# Or Ollama local:
# OLLAMA_MODEL=llama3.2

# Limits
LLM_TIMEOUT=30
MAX_ARTIFACT_CHARS=20000

# Swarm Configuration
MAX_SWARM_HOPS=12
MAX_STAGE_TIME_MINUTES=10
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.1

# Indexing Configuration
INDEX_ROOT=.
INDEX_BATCH_SIZE=100
INDEX_CHUNK_SIZE=512
INDEX_CHUNK_OVERLAP=64
RECREATE_INDEX=false
EMBEDDER_MODEL=sentence-transformers/all-MiniLM-L6-v2

# RAG Configuration
MAX_RAG_CHARS=12000
RAG_CACHE_TTL=300
QDRANT_TIMEOUT=10

# Telemetry
SWARM_LOG_FILE=.swarm_handoffs.log
SWARM_METRICS_FILE=.swarm_metrics.json
MAX_LOG_SIZE_MB=50

# Redis (cloud)
REDIS_URL=
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=
