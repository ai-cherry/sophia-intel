# SOPHIA Intel Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Core Application Configuration
# =============================================================================
ENV=development
DEBUG=true
LOG_LEVEL=info

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=http://localhost:8000
VITE_API_URL=http://localhost:8000
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# AI/ML Services
# =============================================================================
# OpenRouter (Primary AI provider)
OPENROUTER_API_KEY=your_openrouter_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# OpenAI (Fallback)
OPENAI_API_KEY=your_openai_key_here

# Llama API
LLAMA_API_KEY=llx-your-llama-api-key

# Hugging Face
HUGGINGFACE_API_TOKEN=hf_your-huggingface-token

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL (Primary database)
POSTGRES_URL=postgresql://user:pass@localhost:5432/sophia
NEON_DATABASE_URL=postgresql://username:password@host/database
NEON_API_TOKEN=your_neon_api_token

# Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_key_here

# Neo4j Graph Database
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password
NEO4J_CLIENT_ID=your_neo4j_client_id
NEO4J_CLIENT_SECRET=your_neo4j_client_secret

# Redis (Caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_USER_API_KEY=your_redis_api_key

# =============================================================================
# External Services
# =============================================================================
# Research & Web Access
BRIGHTDATA_API_KEY=your_brightdata_key_here

# Notion Integration
NOTION_TOKEN=secret_your-notion-integration-token
NOTION_DATABASE_ID=your-notion-database-id

# GitHub Integration
GITHUB_PAT=your_github_token_here

# Memory Services
MEM0_API_KEY=m0-your-mem0-api-key

# Voice Services
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# =============================================================================
# Cloud Infrastructure
# =============================================================================
# Lambda Labs (GPU compute)
LAMBDA_CLOUD_API_KEY=secret_your-lambda-api-key

# Fly.io (deployment)
FLY_API_TOKEN=your-fly-api-token
FLY_APP_NAME=sophia-intel

# Pulumi (infrastructure)
PULUMI_ACCESS_TOKEN=pul-your-pulumi-token

# DNSimple (DNS)
DNSIMPLE_API_KEY=dnsimple_u_your-api-key

# Kong API Gateway
KONG_ACCESS_TOKEN=kpat_your-kong-access-token

# N8N Workflow
N8N_API_KEY=your-n8n-jwt-token

# =============================================================================
# MCP Server Configuration
# =============================================================================
MCP_TELEMETRY_PORT=5001
MCP_EMBEDDING_PORT=5002
MCP_RESEARCH_PORT=5003
MCP_NOTION_PORT=5004
ORCHESTRATOR_URL=http://localhost:8001

# =============================================================================
# Production Overrides
# =============================================================================
INGRESS_HOST=104.171.202.107
KUBE_CONFIG_PATH=/etc/kubeconfig

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_WEB_ACCESS=true
ENABLE_DEEP_RESEARCH=true
ENABLE_TRAINING_MODE=true
ENABLE_VOICE_INTERFACE=false
ENABLE_REAL_TIME_METRICS=true

# =============================================================================
# Performance & Security
# =============================================================================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30
JWT_SECRET_KEY=your-jwt-secret-key
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
